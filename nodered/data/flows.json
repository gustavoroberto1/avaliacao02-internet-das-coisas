    {
        "id": "499d00cbe24239e2",
        "type": "function",
        "z": "dc7b98d8c82523eb",
        "name": "Process Sensor Info",
        "func": "const mongoDevice = {\n  collection: \"devices\",\n  operation: \"updateOne\",\n  payload: [\n    { device_id: msg.payload.device_id },\n    { $set: { light: msg.payload.temperature >= 5 ? \"on\" : \"off\", updated_at: new Date() }}\n  ]\n}\n\nconst mongoTelemetry = {\n  collection: \"telemetry\",\n  operation: \"insertOne\",\n  payload: {\n    _id: msg.payload._id,\n    device_id: msg.payload.device_id,\n    temperature: msg.payload.temperature,\n    unit: msg.payload.unit,\n    created_at: new Date(),\n    updated_at: new Date(),\n    raw: JSON.stringify(msg.payload)\n  }\n}\n\nlet postgres = null;\nif (msg.payload.temperature >= 5) {\n  postgres = {\n    query: \"INSERT INTO alerts (id, device_id, temperature, created_at, reason) VALUES ($1, $2, $3, $4, $5)\",\n    params: [msg.payload._id, msg.payload.device_id, msg.payload.temperature, new Date(), \"ACIMA_5_GRAUS_CELSIUS\"]\n\n  }\n}\n\nconst command = {\n  topic: `device/${msg.payload.device_id}/cmd/light`,\n  qos: 1,\n  retain: false,\n  payload: {\n    device_id: msg.payload.device_id,\n    state: msg.payload.temperature >= 5 ? \"on\" : \"off\"\n  }\n}\n\nreturn [mongoDevice, mongoTelemetry, postgres, command];",
