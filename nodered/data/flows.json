    {
        "id": "910b09faabe6a704",
        "type": "function",
        "z": "dc7b98d8c82523eb",
        "name": "Process Device Info",
        "func": "msg.collection = \"devices\";\nmsg.operation = \"updateOne\";\n\nconst update = {\n  $set: {\n        device_id: msg.payload.device_id,\n        model: msg.payload.model || null,\n        ip_address: msg.payload.ip_address || null,\n        location: msg.payload.location || null,\n        updated_at: new Date(),\n        light: \"off\",\n        raw: JSON.stringify(msg.payload)\n  },\n    $setOnInsert: { _id: msg.payload._id, created_at: new Date() }\n}\n\nmsg.payload = [\n    { device_id: msg.payload.device_id },\n    update,\n    { upsert: true }\n]\n\nreturn msg;",
        "outputs": 1,
        "timeout": 0,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
